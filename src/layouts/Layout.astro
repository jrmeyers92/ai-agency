    "latitude": 38.6270,
    "longitude": -90.1994
  },
  "areaServed": [
    {
      "@type": "City",
      "name": "St. Louis",
      "containedInPlace": {
        "@type": "State",
        "name": "Missouri"
      }
    },
    {
      "@type": "Country",
      "name": "United States"
    },
    "Worldwide"
  ],
  "serviceType": [
    "AI Application Development",
    "RAG Implementation",
    "Chatbot Development", 
    "MCP Server Development",
