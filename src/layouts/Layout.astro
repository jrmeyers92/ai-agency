  "@id": canonicalURL.toString(),
  "url": canonicalURL.toString(),
  "telephone": "(417) 403-1570",
  "email": "JakeRMeyers92@gmail.com",
  "image": "/about.jpg",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "St. Louis",
    "addressRegion": "MO",
    "addressCountry": "US"
  },
  "geo": {
