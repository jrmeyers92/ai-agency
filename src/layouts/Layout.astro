---
import { ViewTransitions } from "astro:transitions";
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import Nav from "../components/Nav.astro";


interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Jake Meyers | Freelance AI Developer & Full-Stack Developer in St. Louis, MO",
  description = "Freelance developer specializing in AI solutions, RAG applications, chatbots, MCP servers, and full-stack web development. Based in St. Louis, serving clients worldwide. Get custom AI and web solutions built by an experienced independent developer.",
