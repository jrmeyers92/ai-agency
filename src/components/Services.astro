---
import Card from "./Card.astro";
import SectionTitle from "./SectionTitle.astro";
---

<section class="px-4 py-24 max-w-[1400px] mx-auto" id="services">
  <SectionTitle title="AI & Web Development Services" className="mb-6" />
  <div class="flex flex-col gap-6">
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-fr"
      >
      <Card
        title="AI Chatbot Solutions"
        priceText="Starting from $3,000"
        items={[
          "Custom chatbots using OpenAI, Anthropic APIs",
          "Next.js/React frontend integration",
          "Training on your documentation & data",
          "Conversation flow design & testing",
          "Analytics dashboard (Python/TypeScript)",
          "Deployment on Vercel/Netlify",
        ]}
      />
      
      <Card
        title="RAG Applications"
        priceText="Starting from $5,000"
        featured={true}
        items={[
          "Custom RAG systems with LangChain/LlamaIndex",
          "Vector databases (Pinecone, Weaviate, Supabase)",
          "Document processing pipelines",
          "Secure authentication & user management",
          "Chat interfaces with context awareness",
          "FastAPI/Node.js backend development",
        ]}
      />
      
      <Card
        title="MCP Server Development"
        priceText="Starting from $2,000"
        items={[
          "Custom Model Context Protocol servers",
          "Integration with Claude Desktop/API",
          "Tool function development",
          "Resource management systems",
          "TypeScript/Python implementation",
          "Documentation & deployment guides",
        ]}
      />
      </div>
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-fr"
      >    <Card
          title="Full-Stack Web Development"
          priceText="Starting from $3,500"
          items={[
            "React/Next.js, Astro, Vue.js applications",
            "Node.js/Express, FastAPI backends",
            "PostgreSQL, MongoDB database design",
            "Tailwind CSS, responsive design",
            "Authentication (Auth0, Supabase, Clerk)",
            "Deployment on Vercel, Netlify, Railway",
          ]}
        />
      
        <Card
          title="Technical Consulting & Learning"
          priceText="Starting from $150/hour"
          items={[
            "AI integration strategy & planning",
            "Code reviews & architecture guidance",
            "Technology stack recommendations",
            "Learning new frameworks on-demand",
            "Performance optimization consulting",
            "Technical documentation & training",
          ]}
        />
      
        <Card
          title="E-commerce & Custom Apps"
          priceText="Custom Quote"
          items={[
            "Shopify store development & customization",
            "Payment processing (Stripe, PayPal)",
            "Inventory & order management systems",
            "Custom business automation tools",
            "API integrations & webhook systems",
            "Progressive Web App (PWA) development"
          ]}
        />
      </div>
  </div>
</section>
