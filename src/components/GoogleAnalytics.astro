---
const { id } = Astro.props;
---

<!-- Google tag (gtag.js) -->
<script type="text/partytown" define:vars={{ id }}>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag('js', new Date());
  gtag('config', id);
</script>
<script type="text/partytown" async src={`https://www.googletagmanager.com/gtag/js?id=${id}`}></script>