---
interface Props {
  title: string;
  priceText: string;
  items: string[];
  featured?: boolean;
}

const { title, priceText, items, featured = false } = Astro.props;
---

<div class={`group relative h-full overflow-hidden rounded-2xl transition-all duration-500 hover:scale-105 ${
    featured 
      ? "bg-gradient-to-br from-primary-500 to-accent-500 shadow-glow-primary" 
      : "bg-white border border-neutral-200 shadow-soft hover:shadow-medium"
  }`}>
  
  {featured && (
    <div class="absolute -right-10 top-6 rotate-45 bg-white/20 backdrop-blur-sm px-10 py-1">
      <span class="text-sm font-semibold text-white">Most Popular</span>
    </div>
  )}

  <!-- Header -->
  <div class="p-8">
    <div class="flex items-center justify-between mb-4">
      <h3 class={`text-2xl font-bold tracking-tight ${
          featured ? "text-white" : "text-neutral-900"
        }`}>
        {title}
      </h3>
      
      <!-- Icon based on service type -->
      <div class={`p-3 rounded-xl ${
          featured 
            ? "bg-white/20 backdrop-blur-sm" 
            : "bg-gradient-to-br from-primary-100 to-accent-100"
        }`}>
        {title.includes('RAG') && (
          <svg class={`w-6 h-6 ${featured ? 'text-white' : 'text-primary-600'}`} fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7v10c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V7l-10-5z"/>
          </svg>
        )}
        {title.includes('Chatbot') && (
          <svg class={`w-6 h-6 ${featured ? 'text-white' : 'text-primary-600'}`} fill="currentColor" viewBox="0 0 24 24">
            <path d="M20 2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h4l4 4 4-4h4c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
          </svg>
        )}
        {title.includes('MCP') && (
          <svg class={`w-6 h-6 ${featured ? 'text-white' : 'text-primary-600'}`} fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
        )}
        {title.includes('Development') && (
          <svg class={`w-6 h-6 ${featured ? 'text-white' : 'text-primary-600'}`} fill="currentColor" viewBox="0 0 24 24">
            <path d="M9.4 16.6L4.8 12l4.6-4.6L8 6l-6 6 6 6 1.4-1.4zm5.2 0L19.2 12l-4.6-4.6L16 6l6 6-6 6-1.4-1.4z"/>
          </svg>
        )}
        {title.includes('Consulting') && (
          <svg class={`w-6 h-6 ${featured ? 'text-white' : 'text-primary-600'}`} fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        )}
        {title.includes('E-commerce') && (
          <svg class={`w-6 h-6 ${featured ? 'text-white' : 'text-primary-600'}`} fill="currentColor" viewBox="0 0 24 24">
            <path d="M7 18c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12L8.1 13h7.45c.75 0 1.41-.41 1.75-1.03L21.7 4H5.21l-.94-2H1zm16 16c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
          </svg>
        )}
      </div>
    </div>
    
    <div class={`text-sm font-medium ${
        featured ? "text-white/90" : "text-primary-600"
      }`}>
      {priceText}
    </div>
  </div>

  <!-- Features List -->
  <div class="px-8 pb-8">
    <ul class="space-y-4">
      {items.map((item) => (
        <li class="flex items-start gap-3">
          <div class={`flex-shrink-0 w-5 h-5 mt-0.5 rounded-full flex items-center justify-center ${
              featured 
                ? "bg-white/20 backdrop-blur-sm" 
                : "bg-success-100"
            }`}>
            <svg class={`w-3 h-3 ${
                featured ? "text-white" : "text-success-600"
              }`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <span class={`text-sm leading-relaxed ${
              featured ? "text-white/90" : "text-neutral-600"
            }`}>
            {item}
          </span>
        </li>
      ))}
    </ul>
  </div>

  <!-- CTA Button -->
  <div class="p-8 pt-0">
    <a href="#contact" class={`group/btn block w-full text-center rounded-xl px-6 py-4 font-semibold transition-all duration-300 transform hover:scale-105 ${
        featured
          ? "bg-white text-primary-600 hover:bg-white/90 shadow-soft"
          : "bg-gradient-to-r from-primary-500 to-accent-500 text-white hover:from-primary-600 hover:to-accent-600 shadow-glow-primary"
      }`}>
      Get Started
      <svg class="inline-block ml-2 w-4 h-4 group-hover/btn:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
      </svg>
    </a>
  </div>
</div>