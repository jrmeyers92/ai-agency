---
// src/components/PricingCard.astro
interface Props {
  title: string;
  priceText: string;
  items: string[];
  featured?: boolean;
}

const { title, priceText, items, featured = false } = Astro.props;
---

<div
  class={`grid grid-rows-[auto_1fr_auto] h-full relative overflow-hidden rounded-xl border transition-all duration-300 hover:shadow-xl ${
    featured ? "border-blue-500 shadow-lg" : "border-gray-200 shadow-md"
  }`}
>
  {
    featured && (
      <div class="absolute -right-12 top-7 rotate-45 bg-blue-500 px-12 py-1">
        <span class="text-sm font-semibold text-white">Popular</span>
      </div>
    )
  }

  <div class="p-6">
    <div class="space-y-2">
      <h3
        class={`text-2xl font-bold tracking-tight ${
          featured ? "text-blue-600" : "text-gray-900"
        }`}
      >
        {title}
      </h3>
      <!-- <div class="flex items-baseline text-gray-900">
        <span class="text-xl font-bold tracking-tight">{priceText}</span>
      </div> -->
    </div>
  </div>

  <div class="px-6">
    <div class="h-px bg-gray-200 mb-6"></div>
    <ul class="space-y-3">
      {
        items.map((item) => (
          <li class="flex items-start gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class={`h-5 w-5 mt-1 ${
                featured ? "text-blue-500" : "text-gray-600"
              }`}
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="20 6 9 17 4 12" />
            </svg>
            <span class="text-gray-700 leading-relaxed">{item}</span>
          </li>
        ))
      }
    </ul>
  </div>

  <div class="p-6 mt-6">
    <a
      href="#contact"
      class={`block text-center w-full rounded-lg px-4 py-2.5 text-sm font-semibold transition-colors duration-200 ${
        featured
          ? "bg-blue-600 text-white hover:bg-blue-700"
          : "bg-gray-900 text-white hover:bg-gray-700"
      }`}
    >
      Contact Us
    </a>
  </div>
</div>